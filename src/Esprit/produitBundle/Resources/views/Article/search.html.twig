{% extends "EspritproduitBundle::layout.html.twig" %}
{% block title %} {%endblock%}
{% block page_body %}
   	<div class="box span12">
            
                                          
					<div class="box-header" data-original-title>
						<h2><i class="halflings-icon user"></i><span class="break"></span>Members</h2>
						<div class="box-icon">
							<a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
							<a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
							<a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
						</div>
					</div>
            
            <div class="box-content">
                <a href="{{path('new_article')}}" class="quick-button-small span1">
							<i class="halflings-icon plus-sign"></i>
							<p>New</p>
							<span class="notification blue">7</span>
		</a>
                <br><br><br><br><br>
						<table class="table table-striped table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
								  <th>nom</th>
								  <th>qtn</th>
								  <th>prix</th>
								
								  <th>Actions</th>
							  </tr>
						  </thead>   
						  <tbody>
                                                      {% for article in articles %}
							<tr>
								<td>{{article.nom}}</td>
								<td class="center">{{article.qtn}}</td>
                                                         
								<td class="center">{{article.prix}}</td>
                                                              
								<td class="center">
									
									<a class="btn btn-info" href="#">
										<i class="halflings-icon white edit"></i>  
									</a>
									<a class="btn btn-danger" href="#">
										<i class="halflings-icon white trash"></i> 
									</a>
								</td>
							</tr>
							        {% endfor %}                     
							  </tbody>
						 </table>  
						 <div class="pagination pagination-centered">
						  <ul>
							<li><a href="#">Prev</a></li>
							<li class="active">
							  <a href="#">1</a>
							</li>
							<li><a href="#">2</a></li>
							<li><a href="#">3</a></li>
							<li><a href="#">4</a></li>
							<li><a href="#">Next</a></li>
						  </ul>
						</div>     
					</div>
				</div><!--/span-->
{% endblock %}


